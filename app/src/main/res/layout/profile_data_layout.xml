<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileData_userProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="6dp"
        android:src="@drawable/ic_profile"
        android:tint="@color/white"
        app:civ_border_color="@color/white"
        app:civ_border_width="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout7"
        app:layout_constraintStart_toStartOf="@+id/linearLayout7"
        app:layout_constraintTop_toTopOf="@+id/linearLayout7"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/profileData_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:text="Sabid Ansari"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/profileData_userProfilePicture"
        app:layout_constraintStart_toStartOf="@+id/profileData_userProfilePicture"
        app:layout_constraintTop_toBottomOf="@+id/profileData_userProfilePicture"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/profileData_userMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="+91-9872448321"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/profileData_userName"
        app:layout_constraintStart_toStartOf="@+id/profileData_userName"
        app:layout_constraintTop_toBottomOf="@+id/profileData_userName" />

    <ImageButton
        android:id="@+id/profileData_editProfileImageButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimary"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/profileData_userMobileNumber"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout7"
        app:layout_constraintTop_toTopOf="@+id/profileData_userMobileNumber"
        app:srcCompat="@drawable/ic_edit"
        tools:ignore="VectorDrawableCompat" />
</androidx.constraintlayout.widget.ConstraintLayout>